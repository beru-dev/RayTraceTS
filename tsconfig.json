{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "types": [
        "node",
        "jest"
      ]
    },
    "exclude": [
      "node_modules",
      "src/**/*.test.ts"
    ],
    "typedocOptions": {
      "out": "docs",
      "entryPoints": ["./src"]
    }
  }